# Application Configuration
PROJECT_NAME="DocSign Platform API"
API_V1_STR="/api/v1"

# Database Configuration (for local PostgreSQL)
# Replace with your actual database credentials
DATABASE_URL="postgresql://user:password@localhost:5432/docsign_db"

# CORS Configuration
# List of origins that are allowed to make cross-origin requests.
# Use "*" for development to allow all origins, but be more specific in production.
# Example for production: BACKEND_CORS_ORIGINS=["http://localhost:8000","https://your-frontend-domain.com"]
BACKEND_CORS_ORIGINS=["*"]

# Storage Path
# The absolute path to the storage directory
STORAGE_BASE_PATH="./backend/storage"

# External Microservice URLs
# The base URLs for your dedicated AI/ML services
SIGNATURE_API_URL="http://myapi.com/signdet"
OCR_API_URL="http://myapi.com/enocr"
LLM_API_URL="http://myapi.com/gemma3"

# Celery Configuration (using Redis)
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"